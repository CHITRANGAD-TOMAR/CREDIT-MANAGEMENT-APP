<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayot"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BACKGROUND">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="QUICK MONEY "
            android:textSize="24dp"
            android:textColor="#FF9800"/>

        <TextView
            android:id="@+id/transferred_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="TRANSFER"
            android:textSize="24dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/verify"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="USER'S NAME"
                    android:textSize="24dp"
                    android:textColor="#E74C3C"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="italic"
                        android:text="EMAIL"
                        android:textSize="12dp"
                        android:textColor="#2E86C1"
                        android:inputType="textEmailAddress"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:text="ACCNO"
                            android:textSize="14dp"
                            android:textColor="#212F3D"/>


                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle"/>


                        <TextView
                            android:id="@+id/accountno"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:text="ACCNO"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212F3D"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:text="Available Balance"
                            android:textSize="14dp"
                            android:textColor="@color/ORANGE"/>

                    </LinearLayout>

                   <LinearLayout
                       android:layout_marginTop="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="sans-serif"
                           android:textStyle="bold"
                           android:text="â‚¹"
                           android:textSize="24dp"
                           android:layout_marginLeft="4dp"
                           android:textColor="@color/black"/>

                       <TextView
                           android:id="@+id/credits"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="sans-serif"
                           android:textStyle="bold"
                           android:text="NUMBER"
                           android:textSize="24dp"
                           android:layout_marginLeft="4dp"
                           android:textColor="@color/black"/>

                   </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_rname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textAllCaps="true"
                            android:hint="Enter Beneficiary Name"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:textColorHint="@color/ORANGE"
                            android:background="@drawable/editbox"
                            android:padding="20dp"/>

                        <EditText
                            android:id="@+id/et_raccountno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:inputType="textCapWords"
                            android:hint="Enter Beneficiary Account Number"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:textColorHint="@color/ORANGE"
                            android:background="@drawable/editbox"
                            android:padding="20dp"/>

                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Enter Amount"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:textColorHint="@color/ORANGE"
                            android:background="@drawable/editbox"
                            android:padding="20dp"/>

                        <Button
                            android:id="@+id/btn_transfer"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:textSize="20dp"
                            android:layout_marginBottom="20dp"
                            android:text="QUICK PAY"
                            android:textColor="@color/white"
                            android:background="@drawable/buttonbox"/>

                    </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
